---
import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Alexis Peñaranda</h1>
			<p class="hero__text">
				Desarrollador de Software.
				Apasionado y entusiasta por la tecnología.
			</p>
			<Boton href="#" texto="Quiero saber más"/>
		</div>
    <img
		class="hero__img"
		src="/img/alexis.png"
		alt="Alexis Peñaranda"
		width="384"
    	height="384"
	/>
	</div>
</section>
